# --- Server ---
PORT=3001
NODE_ENV=development
SESSION_SECRET=ein-sicherer-zufalls-string-hier

# --- Azure AD App Registration ---
# Azure Portal → Entra ID → App registrations
# Benötigte Berechtigungen: User.Read, Mail.Send, Calendars.ReadWrite
AZURE_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
AZURE_CLIENT_SECRET=eure-client-secret-hier
AZURE_TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# --- Frontend URL (für CORS) ---
FRONTEND_URL=http://localhost:3001
